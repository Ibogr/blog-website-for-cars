<% if (home) { %>
    <!-- Blog card displayed only if 'home' flag is true -->
    <div class="row my-3 border">
        
        <!-- Column 1: Blog Image -->
        <div class="col-3">
            <img src="<%= image %>" alt="<%= title %>" class="img-fluid">
        </div>

        <!-- Column 2: Blog Title and Brief -->
        <div class="col-7">
            <h1 class="h5">
                <a href="blogs/<%= blogId %>">
                    <%= title %>
                </a>
            </h1>
            <p class="lead">
                <%= brief %>
            </p>
        </div>

        <!-- Column 3: Admin Action Button -->
        <div class="col-2">
            <form action="../admin/blog-list/<%= blogId %>" method="post">
                <div class="col-2 mt-3">
                    <!-- Button to perform some blog-related action (e.g., feature, mark, or edit) -->
                    <button type="submit" class="btn btn-info badge">blog</button>
                </div>
            </form>
        </div>

    </div>
<% } %>
